<Window x:Class="Hospital.WPF.Views.UserEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор пользователя" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        MinWidth="350">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding User.LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding User.FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding User.MiddleName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Логин:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding User.Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Пароль:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Margin="0,5">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsNewUser}" Value="False">
                            <Setter Property="ToolTip" Value="Оставьте пустым, чтобы не менять пароль"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Роль:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedRole}" Margin="0,5"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Visibility="{Binding IsStaffRoleSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="Отделение:" Margin="0,5,0,0"/>
            <ComboBox ItemsSource="{Binding AllDepartments}" 
                      SelectedItem="{Binding SelectedDepartment}"
                      DisplayMemberPath="Name" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" IsDefault="True" Command="{Binding SaveCommand}" MinWidth="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" IsCancel="True" Command="{Binding CancelCommand}" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>