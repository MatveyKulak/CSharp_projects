<Window x:Class="Hospital.WPF.Views.PatientEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Карточка пациента" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        MinWidth="350">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Patient.LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Patient.FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Patient.MiddleName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата рождения:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding Patient.DateOfBirth}" Margin="0,5"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Адрес:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Patient.Address, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Телефон:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Patient.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Диагноз:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Patient.Diagnosis, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Отделение:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox Grid.Row="7" Grid.Column="1" Margin="0,5"
                  ItemsSource="{Binding AllDepartments}"
                  SelectedItem="{Binding SelectedDepartment}"
                  DisplayMemberPath="Name"/>

        <TextBlock Grid.Row="8" Grid.Column="0" Text="Лечащий врач:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox Grid.Row="8" Grid.Column="1" Margin="0,5"
                  ItemsSource="{Binding AllDoctors}"
                  SelectedItem="{Binding SelectedDoctor}"
                  DisplayMemberPath="FullName"/>

        <StackPanel Grid.Row="10" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" IsDefault="True" Command="{Binding SaveCommand}" MinWidth="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" IsCancel="True" Command="{Binding CancelCommand}" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>