<UserControl x:Class="Hospital.WPF.Views.AppointmentDetails.InjectionAppointmentDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Название препарата:"/>
        <TextBox Text="{Binding MedicationName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
        <TextBlock Text="Дозировка:"/>
        <TextBox Text="{Binding Dosage, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
        <TextBlock Text="Количество:"/>
        <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</UserControl>