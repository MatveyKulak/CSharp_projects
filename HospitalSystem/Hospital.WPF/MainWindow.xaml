<Window x:Class="Hospital.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система Больница" Height="700" Width="900" WindowStartupLocation="CenterScreen">

    <Grid x:Name="MainGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding WelcomeMessage}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Grid.Column="1" Command="{Binding LogoutCommand}" Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7E8;" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Сменить пользователя"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>